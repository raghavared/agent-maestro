{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agents-ui.maestro.dev/schemas/error-response.json",
  "title": "ErrorResponse",
  "description": "Standard error response format for API errors",
  "type": "object",
  "required": ["error", "code", "message"],
  "properties": {
    "error": {
      "type": "boolean",
      "const": true,
      "description": "Always true to indicate this is an error response",
      "examples": [true]
    },
    "code": {
      "type": "string",
      "minLength": 1,
      "description": "Machine-readable error code for programmatic error handling",
      "examples": [
        "NOT_FOUND",
        "VALIDATION_ERROR",
        "INTERNAL_SERVER_ERROR",
        "UNAUTHORIZED",
        "CONFLICT"
      ]
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable error message describing what went wrong",
      "examples": [
        "Project not found",
        "Invalid task ID format",
        "Database connection failed"
      ]
    },
    "details": {
      "description": "Optional additional details about the error, structure varies by error type",
      "examples": [
        {"field": "email", "issue": "Invalid email format"},
        {"taskId": "task_invalid", "reason": "Task does not exist"},
        {"validationErrors": [{"field": "name", "message": "Name is required"}]}
      ]
    }
  },
  "additionalProperties": false
}
