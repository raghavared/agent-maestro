{
  "name": "maestro-server",
  "version": "1.0.0",
  "description": "Maestro task management server",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "watch": "tsc --watch",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:report": "jest --coverage --verbose && echo '\n✅ Test report generated: test-report.html\n✅ Coverage report: coverage/index.html'",
    "build:binary": "bunx @yao-pkg/pkg dist/server.js --targets node20-macos-arm64 --output ../maestro-ui/src-tauri/binaries/maestro-server-aarch64-apple-darwin",
    "build:binary:darwin-arm64": "bunx @yao-pkg/pkg dist/server.js --targets node20-macos-arm64 --output dist/bin/maestro-server",
    "build:binary:darwin-x64": "bunx @yao-pkg/pkg dist/server.js --targets node20-macos-x64 --output dist/bin/maestro-server",
    "build:binary:linux-x64": "bunx @yao-pkg/pkg dist/server.js --targets node20-linux-x64 --output dist/bin/maestro-server",
    "build:binary:win-x64": "bunx @yao-pkg/pkg dist/server.js --targets node20-win-x64 --output dist/bin/maestro-server.exe"
  },
  "keywords": [
    "maestro",
    "task-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "ws": "^8.19.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.7.3",
    "@yao-pkg/pkg": "^5.11.0"
  }
}
