# ================================
# Maestro Server Configuration
# ================================
# Copy this file to .env and modify as needed

# Server
PORT=3000
HOST=0.0.0.0
SERVER_URL=http://localhost:3000

# Storage Directories
# Paths support ~ for home directory
DATA_DIR=~/.maestro/data
SESSION_DIR=~/.maestro/sessions
SKILLS_DIR=~/.agents-ui/maestro-skills

# Database
# Type: filesystem (default) or postgres
DATABASE_TYPE=filesystem
# DATABASE_URL=postgres://user:password@localhost:5432/maestro

# Manifest Generator
# Type: cli (default) or server
MANIFEST_GENERATOR=cli
MAESTRO_CLI_PATH=maestro

# CORS
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_CREDENTIALS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty
# LOG_FILE=/var/log/maestro/server.log

# Environment
NODE_ENV=development
DEBUG=false
