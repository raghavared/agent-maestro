{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agent Maestro",
  "version": "0.3.0",
  "identifier": "com.agents-ui.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Agent Maestro",
        "devtools": true,
        "width": 1200,
        "height": 800,
        "minWidth": 480,
        "minHeight": 600,
        "resizable": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc://localhost http://localhost:2357 ws://localhost:2357 http://localhost:3001 ws://localhost:3001 http://localhost:3002 ws://localhost:3002 http://localhost:3000 ws://localhost:3000 https://api.github.com; media-src 'self'"
    }
  },
  "bundle": {
    "homepage": "https://github.com/subhangR/agent-maestro",
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "externalBin": []
  }
}